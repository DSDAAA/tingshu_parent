<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.atguigu.mapper.BaseAttributeMapper">
    <resultMap id="propertyMap" type="com.atguigu.entity.BaseAttribute" autoMapping="true">
        <id property="id" column="id"></id>
        <collection property="attributeValueList" ofType="com.atguigu.entity.BaseAttributeValue">
            <id property="id" column="attribute_value_id"></id>
        </collection>
    </resultMap>
    <select id="getPropertyByCategoryId" resultMap="propertyMap">
        SELECT a.id,
               a.attribute_name,
               a.category1_id,
               b.id attribute_value_id,
               b.value_name,
               b.attribute_id
        FROM base_attribute a
                 INNER JOIN base_attribute_value b ON a.id = b.attribute_id
        where a.category1_id = #{xxx}
    </select>
</mapper>
